<p id="notice"><%= notice %></p>

<h1>Buildings</h1>
<%= link_to 'New Building', new_building_path %>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Location</th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= link_to building.name, building_path(building) %></td>
        <td><%= building.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>